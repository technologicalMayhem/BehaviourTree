<UXML xmlns:bte="BehaviourTrees.UnityEditor.UIElements" xmlns:editor="UnityEditor.UIElements"
      xmlns="UnityEngine.UIElements">
    <editor:Toolbar>
        <editor:ToolbarMenu display-tooltip-when-elided="true" text="Assets"/>
        <editor:ToolbarMenu text="View">
            <editor:ToolbarButton name="show-problems" text="Problems Window"/>
        </editor:ToolbarMenu>
    </editor:Toolbar>
    <VisualElement name="graph-curtain">
        <Label text="Load a behaviour tree by opening it in the project view or using the assets dropdown."
               display-tooltip-when-elided="true"/>
    </VisualElement>
    <bte:SplitView class="hide" orientation="Horizontal" name="split-view" fixed-pane-initial-dimension="1200">
        <bte:BehaviourTreeView focusable="true"/>
        <VisualElement class="right-panel">
            <ScrollView class="right-panel-inspector">
                <bte:InspectorView/>
            </ScrollView>
            <bte:BlackboardView class="right-panel-blackboard"/>
        </VisualElement>
    </bte:SplitView>
</UXML>
